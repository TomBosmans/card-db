{
  "name": "backend",
  "author": "Tom Bosmans",
  "version": "0.0.1",
  "description": "Backend for card-db",
  "scripts": {
    "build": "tsc",
    "start:dev": "nodemon -r ts-node/register -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/main.js",
    "shell": "node -r ts-node/register",
    "test": "node -r ts-node/register --env-file=.env.test --test **/*.spec.ts",
    "lint": "eslint . --max-warnings 0 --report-unused-disable-directives",
    "lint:fix": "npm run lint -- --fix",
    "generate-types": "DATABASE_URL=postgresql://postgres:@postgres:5432/card-db kysely-codegen --camel-case",
    "db:generate": "kysely-pg-migrator-tsnode generate --env=.env --folder=src/db",
    "db:up": "kysely-pg-migrator-tsnode up --env=.env --folder=src/db",
    "db:down": "kysely-pg-migrator-tsnode down --env=.env --folder=src/db",
    "db:dump": "kysely-pg-migrator-tsnode dump --env=.env --folder=src/db",
    "db:codegen": "kysely-pg-migrator-tsnode codegen --env=.env --folder=src/db",
    "db:up:prod": "kysely-pg-migrator-node up --env=.env --folder=dist/db",
    "db:down:prod": "kysely-pg-migrator-node down --env=.env --folder=dist/db"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@swc/core": "^1.4.12",
    "@swc/helpers": "^0.5.8",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.12.4",
    "@types/pg": "^8.11.6",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.0.0",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "regenerator-runtime": "^0.14.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.6.0"
  },
  "dependencies": {
    "@fastify/autoload": "^5.8.2",
    "fastify": "^4.27.0",
    "fastify-type-provider-zod": "^1.1.9",
    "kysely": "^0.27.3",
    "kysely-pg-migrator": "^0.0.2",
    "pg": "^8.11.5",
    "pino-pretty": "^11.0.0",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.23.8"
  }
}
